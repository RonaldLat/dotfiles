import = [
  "/home/ronald/.nvm/versions/node/v22.14.0/lib/node_modules/alacritty-themes/themes/Ayu-Dark.toml"
]

[env]
WINIT_X11_SCALE_FACTOR = "1.0"

[font]
size = 11

  [font.bold]
  family = "JetBrainsMonoNL Nerd Font"
  style = "Heavy"

  [font.italic]
  family = "JetBrainsMono Nerd Font"
  style = "Medium Italic"

  [font.normal]
  family = "JetBrainsMono Nerd Font"
  style = "Medium"

[scrolling]
history = 10_000

[mouse]
hide_when_typing = true

[window]
opacity = 0.96
dynamic_padding = false
blur = true

[cursor]
vi_mode_style = "Block"

[[hints.enabled]]
command = "xdg-open"
hyperlinks = true
post_processing = true
regex = """
(ipfs:|ipns:|magnet:|mailto:|gemini://|gopher://|https://|http://|news:|file:|
git://|ssh:|ftp://)[^\u0000--<>"\\s{-}\\^⟨⟩`]+"""

  [hints.enabled.binding]
  key = "X"
  mods = "Control|Shift"

  [hints.enabled.mouse]
  enabled = true
[general] import = [ "~/dotfiles/.config/alacritty/themes/nightfox.toml" ] live_config_reload = true

[colors.hints.end]
background = "#282828"
foreground = "#fabd2f"
